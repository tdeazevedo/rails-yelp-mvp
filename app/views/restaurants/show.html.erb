<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>Restaurant</h1>
      <p>
        <strong>Name:</strong>
        <%= @restaurant.name %>
      </p>

      <p>
        <strong>Address:</strong>
        <%= @restaurant.address %>
      </p>

      <p>
        <strong>Phone_number:</strong>
        <%= @restaurant.phone_number %>
      </p>

      <p>
        <strong>Category:</strong>
        <%= @restaurant.category %>
      </p>

      <h1>Review creation</h1>
      <p>You're about to create a review for restaurant <strong><%= @restaurant.name %></strong></p>

      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      <% end %>

      <%= link_to 'All restaurants', restaurants_path %>
    </div>
  </div>
</div>




