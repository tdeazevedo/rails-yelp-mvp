<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>Restaurants</h1>
      <%= link_to 'New Restaurant', new_restaurant_path, class: 'btn btn-primary' %>

      <ul>
        <% @restaurants.each do |restaurant| %>
          <li><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
